{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/wrangler.jsonc",
      "!**/tsconfig.json",
      "!**/.source",
      "!**/worker-configuration.d.ts"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "noUnknownAtRules": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "style": {
        "noMagicNumbers": "off",
        "useConsistentMemberAccessibility": "off"
      },
      "nursery": {
        "noShadow": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "extends": ["ultracite"]
}
