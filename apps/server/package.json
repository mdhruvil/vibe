{
  "name": "@vibe/server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "db:generate": "drizzle-kit generate",
    "db:migrate:list:local": "wrangler d1 migrations list DB",
    "db:migrate:list:remote": "wrangler d1 migrations list DB --remote",
    "db:migrate:local": "wrangler d1 migrations apply DB",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:studio:local": "drizzle-kit studio",
    "db:studio:remote": "NODE_ENV=production drizzle-kit studio",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "wrangler": "wrangler"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "zod": "^4.0.2",
    "@trpc/server": "^11.5.0",
    "@trpc/client": "^11.5.0",
    "@hono/trpc-server": "^0.4.0",
    "hono": "^4.8.2",
    "drizzle-orm": "^0.44.2",
    "@libsql/client": "^0.15.9",
    "ai": "^5.0.9",
    "@ai-sdk/google": "^2.0.3",
    "better-auth": "^1.3.7"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "drizzle-kit": "^0.31.2",
    "wrangler": "^4.23.0",
    "@types/node": "^22.13.11"
  }
}
